@model XKANBAN.DTOs.Projects.AddProjectViewModel
@{
    ViewData["Title"] = "Создать новый проект";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <form asp-controller="Project" asp-action="Create" method="post">

        <div class="form-group">
            <label for="titleInput">Название</label>
            <input type="text" class="form-control" id="titleInput" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="descriptionTextarea">Описание</label>
            <textarea class="form-control" id="descriptionTextarea" rows="4" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="endDateInput">Дата завершения</label>
            <input type="date" class="form-control" id="endDateInput" name="EndDate" asp-for="EndDate">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Создать</button>
    </form>
</div>